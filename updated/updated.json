{
    "builders": [{                         
      "type": "amazon-ebs",
      "region": "{{user `region` }}",
      "instance_type": "t2.micro",
      "source_ami": "{{user `AMI` }}",
      "ssh_username": "ec2-user",
      "ami_name": "updated-ami  {{timestamp}}"       
    }],
    "provisioners": [{
            "type": "shell",
            "inline": [
                "sudo yum update -y"
            ]
          }
    ]
  }
